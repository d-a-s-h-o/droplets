cat /var/www/dump/etc/hosts > /etc/hosts;
cat /var/www/dump/etc/apache2/ports.conf > /etc/apache2/ports.conf;
cp -r /var/www/dump/etc/apache2/sites-available/. /etc/apache2/sites-available/;
a2dissite 000-default.conf;
a2dissite default-ssl.conf;
a2delsite 000-default.conf;
a2delsite default-ssl.conf;
a2ensite 1.conf;
a2ensite files.conf;
service apache2 reload;
cat /var/www/dump/etc/tor/torrc > /etc/tor/torrc;
service tor start;
touch /var/www/html/onion.url;
touch /var/www/dump/files.hostname;
cat /var/lib/tor/1/hostname > /var/www/html/onion.url;
cat /var/lib/tor/files/hostname > /var/www/dump/files.hostname;
git clone https://github.com/cathugger/mkp224o.git /var/www/html/.files/.vanity-urls;
chmod 777 /var/www/html;
chmod 777 /var/www/html/.files;
chmod 777 /var/www/html/.files/1;
useradd jack;
usermod -d /var/www/html/.files/1 jack;
service apache2 reload;
service ssh start;
chmod 777 /var/www/html;
chmod 777 /var/www/html/.files;
chmod 777 /var/www/html/.files/1;
shellinaboxd -b --disable-ssl;
echo 'Set the PASSWORD for jack.';
passwd jack;
echo 'Set the PASSWORD for root.';
passwd root;
echo 'Leave the following blank for their defaults.';
read -p "Enter external DB HOST [db.onionz.dev]: " DBHOST;
DBHOST=${DBHOST:-db.onionz.dev};
read -p "Enter external DB PORT [3306]: " DBPORT;
DBPORT=${DBPORT:-3306};
read -p "Enter external DB NAME [$HOSTNAME]: " DBNAME;
DBNAME=${DBNAME:-$HOSTNAME};
read -p "Enter external DB USER [$HOSTNAME]: " DBUSER;
DBUSER=${DBUSER:-$HOSTNAME};
read -p 'Enter external DB PASS: ' DBPASS;
echo $DBHOST > /var/www/.dbhost.txt;
echo $DBPORT > /var/www/.dbport.txt;
echo $DBNAME > /var/www/.dbname.txt;
echo $DBUSER > /var/www/.dbuser.txt;
echo $DBPASS > /var/www/.dbpass.txt;

#this will creat a docker container that will run on port 9000:9000 {link:9000} which will run all the acceses to the docker containers that is start stop deploy new containers
docker run -d -p 8080:8000 -p 9000:9000 --name=portainer --restart=always -v /var/run/docker.sock:/var/run/docker.sock -v portainer_data:/data portainer/portainer-ce
